<h1><%= @name_label %> Search</h1>

<%= render partial: 'names/index/search_form' %>
<hr>
<%= link_to('clear form', name_search_path,name: 'x', title: 'Clear fields and start a new name search') %> |
<%= link_to('advanced', names_advanced_search_path, title: 'Go to advanced name search') %> |
<%= link_to('taxonomy', taxonomy_search_path(link_params: params),title: 'Go to taxonomy search') %>
<hr>
<div id="search-result-summary">
  <% if @search.present? %>
    <%= render partial: 'name_search_result_summary' %>
  <% end %>
</div>

<div id="search-results">
  <% if @results.present? %>
    <%= render partial: @client_request.content_partial, locals: { search_form: 'advanced_names' } %>
    <%= render partial: 'advanced_names/index/pagination' %>
  <% end %>
</div>


<div id="timing-summary">
  <% if @results.present? %>
    <%= render partial: 'result_timing_summary' %>
  <% end %>
</div>

