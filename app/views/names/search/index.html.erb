<% content_for :page_title do %>
  Name Index Search Client
<% end %>
<% content_for :page_banner do %>
  <h1 class="hidden-sm-down"><%= name_banner_text %></h1>
  <h1 class="hidden-md-up"><%= name_label %></h1>
<% end %>
<% content_for :sidebar do %>
  <%= render "names/search/sidebar" %>
<% end %>
<% content_for :slider do %>
<% end %>

<div id="about-page" class="no-left-padding hidden-xs-up col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
  <h5>About</h5>
  <div id="about-page-inner" class="no-left-padding col-xl-7 col-lg-9 col-md-10"> </div>
</div>

<div class="not-about-page">
<%= render "names/search/form" %>
  <p>
  <% if @search.present? %>
      <span class='search-result-summary'>
        <p class="tiny">
        <%= pluralize(@search.results.pluck("id").uniq.size,
                      "#{(params[:search_type] || 'scientific').sub(/-and-/,' or ')} name") %>
        </p>
        <%= render 'names/search/zero_results_help' if @search.results.empty? %>
      </span>
  <% end %>

  <% if @search.present? %>
    <%= render partial: '/names/search/results', locals: {search: @search, name: @search.results.first} %>
  <% end %>
</div>

<span class="debug red tiny hidden-print">[names/search/index]</span>
