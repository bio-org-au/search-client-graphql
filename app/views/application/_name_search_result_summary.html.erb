<% if @client_request.any_type_of_search? %>
  <% if @client_request.just_count? %>
    <% if @results.error? %>
      Error.
      <% if development? %>
         <%= @results.error %>
         <br>
         <br>
      <% end %>
    <% else %>
      <a id="search-results-summary" title="Search results">
        <%= pluralize(@results.paginator_info.total, 'matching record') %>
      </a>
    <% end %>
  <% else %>
    <% if @results.error? %>
         Sorry!  Something went wrong.  Error details are logged and monitored.
      <% if development? %>
         <br>
         <br>
         <%= @results.error %>
         <br>
         <br>
      <% end %>
    <% else %>
      <% unless @results.present? %>
        No records. 
        <% elapsed = Time.now - @start_time %>(<%= elapsed.round(2) %>s)
      <% end %>
    <% end %>
  <%= render partial: 'number_of_results_summary' %>
  <% end %>
<% end %>

