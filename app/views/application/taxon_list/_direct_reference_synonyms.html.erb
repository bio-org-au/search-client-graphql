
      <ul class="plain indent2">
        <% syn_displayed = false %>
        <% taxon.synonyms.each do |syn| %>
          <% syn_displayed = true %>
          <li>
           <% if @client_request.links? %>
             <%= link_to name_and_status_for_synonym(syn.full_name, syn.simple_name, syn.name_status).html_safe,
                         show_name_path(id: syn.name_id, search_form: 'names') + "#name-#{syn.name_id}",
                         title: "Show name with details" %>
           <% else %>
             <%= name_and_status_for_synonym(syn.full_name, syn.simple_name, syn.name_status).html_safe %>
           <% end %>
        <% end %>
      </ul>
      <% if syn_displayed %>
        <br>
      <% end %>

