  <ul class="plain">
    <% @taxa.each do |taxon| %>
      <li/><%= taxon.full_name %> 
           <i class="syntax-highlight">sensu</i>
           <%= taxon.reference_citation %>
        <ul class="plain indent2">
          <% taxon.taxon_details.taxon_synonyms.each do |synonym| %>
            <li><%= synonym.full_name %>
          <% end %>
        </ul>
        <div class="tiny-break"></div>
        <ul class="plain indent2">
          <% unless taxon.taxon_details.taxon_comment.blank? %>
            <li><%= taxon.taxon_details.taxon_comment.html_safe %>
          <% end %>
          <% unless taxon.taxon_details.taxon_distribution.blank? %>
            <li><%= taxon.taxon_details.taxon_distribution %>
          <% end %>
        </ul>
        <div class="tiny-break"></div>
    <% end %>
  </ul>
