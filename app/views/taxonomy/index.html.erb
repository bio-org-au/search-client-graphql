<h1>Taxonomy Search</h1>

<%= render partial: 'name_form' %>
<%= link_to('new', names_search_path,title: 'Start a new name search') %> |
<%= link_to('advanced', names_advanced_search_path(link_params: params),title: 'Go to advanced search') %> |
<%= link_to('taxonomy', names_advanced_search_path(link_params: params),title: 'Go to taxonomy search') %>
<hr>

<div id="search-results">
<% if @search_term.present? %>
  <% unless @results.present? %>
  No results for "<%= @search_term %>"
  <% elapsed = Time.now - @start_time %>(<%= elapsed.round(2) %>s)
  <% end %>
<% end %>

<% if @results.present? %>
  <h2>
  <%= pluralize(@results.size,'taxon') %>
  found for "<%= @search_term %>"
  <% elapsed = Time.now - @start_time %>(<%= elapsed.round(2) %>s)
  </h2>

  <hr>
  <% if @show_details %>
    <%= render partial: 'detail' %>
  <% else %>
    <%= render partial: 'list' %>
  <% end %>

  <hr>
  <% elapsed = Time.now - @start_time %>
  <%= elapsed.round(2) %> seconds (~<%= (@search.data.taxonomy_search.taxa.size/elapsed).round %> records/second) (index.html)
<% end %>
</div>

<pre>
<%#= simple_format @search.try('to_yaml') %>
</pre>
